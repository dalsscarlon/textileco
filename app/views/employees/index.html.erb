
<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-lg-10">
    <h1>Employees</h1>
  </div>
  <div class="col-lg-2">
    <%= link_to 'New Employee', new_employee_path, {:class => "btn btn-default"} %>
  </div>
</div>
<br>
<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <!-- Default panel contents -->
      <div class="panel-heading">Employees List</div>
      

      <!-- Table -->
      <table class="table">
          <thead>
            <tr>
              <th>Barcode</th>
              <th>First name</th>
              <th>Last name</th>
              <th>Email</th>
              <th colspan='3'></th>
            </tr>
          </thead>

          <tbody>
            <% @employees.each do |employee| %>
              <tr>
                <td><%= employee.barcode %></td>
                <td><%= employee.first_name %></td>
                <td><%= employee.last_name %></td>
                <td><%= employee.email %></td>
                <td><%= link_to 'Show', employee %></td>
                <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
                <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>


