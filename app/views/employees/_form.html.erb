      <%= f.text_field :first_name, {:class=>"form-control" }  %>
    </div>
    
  </div>
  <div class="form-group row">
    <%= f.label :last_name,  {:class=>"col-sm-2 form-control-label"} do %>Last name <span class="required">*</span>
    <% end %> 
    <div class="col-md-10">
      <%= f.text_field :last_name, {:class=>"form-control" }  %>
    </div>
    
  </div>
  <div class="form-group row">
    <%= f.label :email,  {:class=>"col-sm-2 form-control-label"} do %>Email <span class="required">*</span>
    <% end %> 
    <div class="col-md-10">
      <%= f.text_field :email, {:class=>"form-control" }  %>
    </div>
    
