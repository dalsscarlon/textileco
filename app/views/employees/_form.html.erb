      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>

  <% end %>
  <div class="form-group row">
    <%= f.label :first_name,  {:class=>"col-sm-2 form-control-label"} do %>First name <span class="required">*</span>
